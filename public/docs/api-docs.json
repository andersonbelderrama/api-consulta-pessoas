{
    "swagger": "2.0",
    "info": {
        "title": "API Consulta Pessoas",
        "description": "API para consultar pessoas em listas",
        "version": "1.0.0"
    },
    "host": "localhost:8000",
    "basePath": "/api/",
    "schemes": [
        "http"
    ],
    "paths": {
        "/consulta_nome": {
            "post": {
                "tags": [
                    "Consulta por Nome"
                ],
                "summary": "Retorna resultado da consulta",
                "description": "Retorna resultado da consulta",
                "parameters": [
                    {
                        "name": "nome",
                        "in": "formData",
                        "description": "Nome da pessoa",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Consulta realizada com sucesso",
                        "schema": {
                            "$ref": "#/definitions/response"

                        },
                        "examples": {
                            "application/json": {
                                "status": "success",
                                "message": "Consulta realizada com sucesso",
                                "nome": "João Felipe dos Santos",
                                "data": [
                                    {
                                        "nome": "João Felipe Ferreira",
                                        "documento": "123.456.789-00",
                                        "motivo": "OFAC - Lorem Ipsium",
                                        "list_id": "10",
                                        "lista": {
                                            "id": "10",
                                            "lista": "Lista 10"
                                        }
                                    },
                                    {
                                        "nome": "João Felipe Sousa",
                                        "documento": "",
                                        "motivo": "Europe Union - Lorem Ipsium",
                                        "list_id": "10",
                                        "lista": {
                                            "id": "1004",
                                            "lista": "Lista 1004"
                                        }
                                    }
                                ]
                            }
                        }
                    },
                    "201":{
                        "description": "Nenhum resultado encontrado",
                        "schema": {
                            "$ref": "#/definitions/response"
                        },
                        "examples": {
                            "application/json": {
                                "status": "success",
                                "message": "Nenhum resultado encontrado",
                                "nome": "João Felipe dos Santos",
                                "data": []
                            }
                        }
                    },
                    "400": {
                        "description": "Erro ao realizar consulta",
                        "schema": {
                            "$ref": "#/definitions/response"
                        },
                        "examples": {
                            "application/json": {
                                "status": "error",
                                "message": "Campo nome não foi preenchido"
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "response": {
            "type": "object",
            "properties": {
                "status": {
                    "type": "string"
                },
                "code": {
                    "type": "integer"
                },
                "message": {
                    "type": "string"
                }
            }
        },
        "data": {
            "type": "object",
            "properties": {
                "nome": {
                    "type": "string"
                },
                "documento": {
                    "type": "string"
                },
                "motivo": {
                    "type": "string"
                },
                "list_id": {
                    "type": "integer"
                },
                "lista": {
                    "type": "object",
                    "properties": {
                        "id": {
                            "type": "integer"
                        },
                        "lista": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}
